<Window x:Class="vezba.WindowExchangeEquipment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vezba"
        mc:Ignorable="d"
        Title="WindowExchangeEquipment" Height="352.008" Width="377.59" Background="#FFFFE1E1">
    <Grid Margin="0,0,-22,-8">
        <Label Content="Broj prostorije u koju prenosimo:" Margin="44,54,142,242"/>
        <TextBox Name="BrojSobe" Text="{Binding RoomNumber, Mode=OneWay}" Margin="244,54,64,242"/>

        <Label Content="Količina prenete opreme:" Margin="86,116,131,179"/>
        <TextBox Name="Količina" Text="{Binding RoomNumber, Mode=OneWay}" Margin="244,116,64,179"/>

        <Button Click="Potvrdi_Button_Click" Margin="64,234,216,55">Potvrdi</Button>
        <Button Click="Odustani_Button_Click" Margin="202,234,74,55">Odustani</Button>
    </Grid>
</Window>
