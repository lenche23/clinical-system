<Page x:Class="vezba.Calendar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:vezba"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Calendar">

    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0, 0, 15, 0">
                <Button Height="30" Width="120" Margin="5" Padding="5" Click="NewAppointmentClick">+ Nov termin</Button>
                <Button Height="30" Width="120" Margin="5" Padding="5" Click="PreviousWeekClick">Prethodna nedelja</Button>
                <Button Height="30" Width="120" Margin="5" Padding="5" Click="NextWeekClick">Sledeca nedelja</Button>
                <ComboBox Height="30" Width="120" Margin="5" Padding="5" Name="DoctorsComboBox" ItemsSource="{Binding Doctors}" DisplayMemberPath="NameAndSurname" SelectedValuePath="Jmbg"></ComboBox>
            </StackPanel>
            <Border BorderBrush="Gray" BorderThickness="1"  Margin="20, 0,20, 20">
                <Grid Name="CalendarGrid"/>
            </Border>
        </DockPanel>
    </Grid>
</Page>
