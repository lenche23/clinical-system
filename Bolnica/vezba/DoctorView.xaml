<Window x:Class="vezba.DoctorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vezba"
        mc:Ignorable="d"
        Title="DoctorView" Height="700" Width="1200">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="70" Orientation="Vertical" Background="CornflowerBlue">
            <Button Click="CalendarClick" Height="70" Style="{StaticResource ResourceKey=DoctorDefaultButton}">Kalendar</Button>
            <Button Click="MedicineClick" Height="70" Style="{StaticResource ResourceKey=DoctorDefaultButton}">Lekovi</Button>
            <Button Click="AnnouncementsClick" Height="70" Style="{StaticResource ResourceKey=DoctorDefaultButton}">Obaveštenja</Button>
        </StackPanel>
        <Grid>
            <Frame x:Name="Main" NavigationUIVisibility="Hidden"></Frame>
        </Grid>
    </DockPanel>
</Window>
