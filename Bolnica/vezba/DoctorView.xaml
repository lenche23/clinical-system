<Window x:Class="vezba.DoctorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vezba"
        mc:Ignorable="d"
        Title="DoctorView" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Left" Width="50" Orientation="Vertical">
            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Height" Value="50"/>
                </Style>
            </StackPanel.Resources>
            <Button Click="CalendarClick">Kalendar</Button>
            <Button Click="MedicineClick">Lekovi</Button>
            <Button Click="AnnouncementsClick">Obaveštenja</Button>
        </StackPanel>
        <Grid>
            <Frame x:Name="Main" NavigationUIVisibility="Hidden"></Frame>
        </Grid>
    </DockPanel>
</Window>
