<Window x:Class="vezba.DoctorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vezba"
        mc:Ignorable="d"
        Title="DoctorView" Height="450" Width="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Button Margin="5" Padding="5" Click="AddClick">Add</Button>
            <Button Margin="5" Padding="5" Click="EditClick">Edit</Button>
            <Button Margin="5" Padding="5" Click="DeleteClick">Delete</Button>
        </StackPanel>
        <ListView Margin="10" Name="listViewAppointments" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Start Time" Width="250" DisplayMemberBinding="{Binding StartTime, StringFormat=MM/dd/yyyy HH:mm}" />
                    <GridViewColumn Header="Duration" Width="250" DisplayMemberBinding="{Binding DurationInMunutes}" />
                    <GridViewColumn Header="Description" Width="250" DisplayMemberBinding="{Binding ApointmentDescription}" />
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>

</Window>
