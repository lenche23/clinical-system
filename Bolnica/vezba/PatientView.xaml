                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#FF7BC1A1"/>
                        <GradientStop Color="AntiqueWhite" Offset="0.483"/>
                    </LinearGradientBrush>
                </Frame.Background>
            </Frame>
