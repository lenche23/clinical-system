<Window x:Class="Bolnica.WindowViewRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica"
        mc:Ignorable="d"
     Title="WindowNewRoom" Height="450.636" Width="714.376">
    <Grid Margin="0,0,-8,-12">
        <Label Content="Podaci o prostoriji" Margin="21,18,131,253" FontSize="18" FontFamily="Myriad Pro Cond"/>
        <Label Name ="BrProstorijeLabel" Content="Broj prostorije:" Margin="15,66,21,205"/>
        <Label Name ="SpratLabel" Content="Sprat:" Margin="15,171,21,99"/>
        <Label Name ="TipLabel" Content="Tip prostorije:" Margin="15,119,21,153"/>

        <ListView Margin="155,248,154,44" Name="EquipmentBinding">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding Id}" />
                    <GridViewColumn Header="Naziv proizvoda" Width="100" DisplayMemberBinding="{Binding Name}" />
                    <GridViewColumn Header="Količina" Width="100" DisplayMemberBinding="{Binding Quantity}" />
                    <GridViewColumn Header="Tip" Width="100" DisplayMemberBinding="{Binding Type}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
