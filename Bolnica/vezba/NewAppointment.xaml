<Window x:Class="vezba.NewAppointment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vezba"
        mc:Ignorable="d"
        Title="NewAppointment" Height="400" Width="360">
    <Grid>
        <Label Content="Pacijent:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,50,0,0" Width="93"/>
        <Label Content="Lekar:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,81,0,0" Width="93"/>
        <Label Content="Prostorija:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,112,0,0" Width="81"/>
        <Label Content="Datum:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,143,0,0" Width="93"/>
        <Label Content="Vreme:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,174,0,0" Width="93"/>
        <Label Content="Trajanje:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,205,0,0" Width="93"/>
        <Label Content="Opis:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="38,236,0,0" Width="93"/>
        <ComboBox Name ="Patient" ItemsSource="{Binding patients}" DisplayMemberPath="NameAndSurname" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="136,53,0,0"/>
        <ComboBox Name ="Doctor" ItemsSource="{Binding doctors}" DisplayMemberPath="NameAndSurname" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="136,84,0,0"/>
        <ComboBox Name ="Room" ItemsSource="{Binding rooms}" DisplayMemberPath="RoomNumber" HorizontalAlignment="Left" VerticalAlignment="Top" Width="166" Margin="136,115,0,0"/>
        <DatePicker Name ="Date" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="136,144,0,0" Width="166"/>
        <ComboBox Name ="Hours" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="136,174,0,0"/>
        <ComboBox Name ="Minutes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="222,174,0,0"/>
        <Label Content="h" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="187,173,0,0" Width="33"/>
        <Label Content="min" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="272,173,0,0" Width="30"/>
        <ComboBox Name="Duration" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Margin="136,205,0,0"/>
        <Label Content="min" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="188,203,0,0" Width="30"/>
        <TextBox Name="Description" HorizontalAlignment="Left" Height="53" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166" Margin="136,234,0,0"/>
        <Button Name="SaveButton" Content="Sačuvaj" HorizontalAlignment="Left" VerticalAlignment="Top" Width="105" Margin="123,309,0,0" Height="30" Click="SaveButton_Click"/>
        <CheckBox Name="IsEmergency" Content="Hitan pregled" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="208,21,0,0"/>

    </Grid>
</Window>
