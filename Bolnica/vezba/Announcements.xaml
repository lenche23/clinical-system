<Window x:Class="vezba.Announcements"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vezba"
        mc:Ignorable="d"
        Title="Announcements" Height="350" Width="600">
    <Grid>
        <Label Content="Obaveštenja:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="200,50,0,0" FontSize="20" Height="41" Width="127" FontFamily="HP Simplified Hans" />
        <Grid HorizontalAlignment="Left" Height="180" Margin="40,110,0,0" VerticalAlignment="Top" Width="400">
            <DataGrid x:Name="announcementTable" IsReadOnly="True" SelectionMode="Single" ItemsSource="{Binding Ans}" AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="180" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Obaveštenje" Binding="{Binding Title}"  Width="*"/>
                    <DataGridTextColumn Header="Datum" Binding="{Binding FormatedDatePosted}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            <Button Content="Novo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="83" Margin="434,0,-117,0" Height="29" Click="New_Button_Click"/>
            <Button Content="Prikaz" HorizontalAlignment="Left" VerticalAlignment="Top" Width="83" Margin="434,34,-117,0" Height="29" Click="View_Button_Click"/>
            <Button Content="Izmena" HorizontalAlignment="Left" VerticalAlignment="Top" Width="83" Margin="434,68,-117,0" Height="29" Click="Edit_Button_Click"/>
            <Button Content="Brisanje" HorizontalAlignment="Left" VerticalAlignment="Top" Width="83" Margin="434,102,-117,0" Height="29" Click="Delete_Button_Click"/>
        </Grid>
    </Grid>
</Window>
