<Page x:Class="vezba.CreateReferralLetterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:vezba"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CreateReferralLetterPage">

    <Grid Margin="10" Background="White">
        <Grid.Resources>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="Margin" Value="0,10"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </Grid.Resources>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Right" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <Button HorizontalAlignment="Right" Padding="5" Margin="5" Grid.ColumnSpan="2" Width="70"  Height ="30" Click="OkButtonClick">Potvrdi</Button>
            <Button HorizontalAlignment="Right" Padding="5" Margin="5" Grid.ColumnSpan="2" Width="70"  Height ="30" Click="CancelButtonClick">Odustani</Button>
        </StackPanel>
        <TextBlock Grid.Column="0" Grid.Row="1" Padding="10" HorizontalAlignment="Right">Pacijent:</TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="2" Padding="10" HorizontalAlignment="Right">Broj osiguranja:</TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="3" Padding="10" HorizontalAlignment="Right">Početak važenja uputa:</TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="4" Padding="10" HorizontalAlignment="Right">Trajanje uputa:</TextBlock>
        <TextBlock Grid.Column="0" Grid.Row="5" Padding="10" HorizontalAlignment="Right">Lekar:</TextBlock>

        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding NameAndSurname, Mode=OneWay}"/>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding MedicalRecord.HealthInsuranceNumber, Mode=OneWay}"/>
        <DatePicker Grid.Column="1" Grid.Row="3" Margin="10" HorizontalAlignment="Left" Name="DpStartDate" Height="25"/>
        <TextBox Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Height="20" Width="100" Margin="10" Name="TbDuration"></TextBox>
        <ComboBox Grid.Column="1" Grid.Row="5" HorizontalAlignment="Left" Height="20" Width="100" Margin="10" ItemsSource="{Binding Doctors}" DisplayMemberPath="NameAndSurname" Name="cmbDoctors"></ComboBox>
    </Grid>
</Page>
