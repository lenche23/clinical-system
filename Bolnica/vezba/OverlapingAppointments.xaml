<Window x:Class="vezba.OverlapingAppointments"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vezba"
        mc:Ignorable="d"
        Title="OverlapingAppointments" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="appointmentsTable" ItemsSource="{Binding Appointments}" IsReadOnly="True" SelectionMode="Single" AutoGenerateColumns="False" HorizontalAlignment="Left" VerticalAlignment="Top" Width="700" Height="180" Margin="32,167,0,0" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Vreme" Binding="{Binding StartTime, StringFormat=dd.MM.yyyy HH:mm}" Width="100" />
                <DataGridTextColumn Header="Trajanje (min)" Binding="{Binding DurationInMunutes}" Width="80"/>
                <DataGridTextColumn Header="Prostorija" Binding="{Binding RoomNumber}" Width="80"/>
                <DataGridTextColumn Header="Pacijent" Binding="{Binding PatientName}" Width="140"/>
                <DataGridTextColumn Header="Lekar" Binding="{Binding DoctorName}" Width="140"/>
                <DataGridTextColumn Header="Opis" Binding="{Binding AppointmentDescription}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
