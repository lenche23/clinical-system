<Page x:Class="vezba.ManagerGUI.RoomViewRenovationsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:vezba.ManagerGUI"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="750"
      Title="RoomViewRenovationsPage">
    <Grid>
        <Label Margin="250,52,245,312" FontSize="18">Renovacije</Label>
        <ListView Margin="115,105,115,90" Name="RenovationsBinding" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding RenovationID}" />
                    <GridViewColumn Header="Početak" Width="160" DisplayMemberBinding="{Binding StartTime, StringFormat=dd/MM/yyyy HH:mm}" />
                    <GridViewColumn Header="Trajanje" Width="100" DisplayMemberBinding="{Binding DurationInDays}" />
                </GridView>
            </ListView.View>
        </ListView>

        <Button Margin="159,380,312,25" Background="#FFFFD6C2" Click="Renovation_Button_Click">Zakaži renoviranje</Button>
        <Button Margin="325,380,145,25" Background="#FFFFD6C2" Click="Discard_Button_Click">Otkaži renoviranje</Button>

    </Grid>
</Page>
