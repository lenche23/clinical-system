<Page x:Class="vezba.ManagerGUI.InventoryChangeEquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:vezba.ManagerGUI"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="750"
      Title="InventaryChangeEquipment" Background="#FFFFC1A4">
    <Grid>
        <Label Content="Izmena opreme "  FontSize="18" FontFamily="Myriad Pro Cond" Margin="155,38,117,381" RenderTransformOrigin="0.643,0.468"/>
        <Label Content="Naziv opreme:" Margin="93,124,206,260"/>
        <Label Content="Tip opreme:" Margin="104,194,490,320" />
        <TextBox Name="NazivOpreme" Text="{Binding Name, Mode=OneWay}" Margin="190,124,95,405" RenderTransformOrigin="0.491,0.484" />
        <Button Click="Okay_Button_Click" Margin="64,384,405,130">Potvrdi</Button>
        <Button Click="Cancel_Change_Button_Click" Margin="435,384,61,130">Odustani</Button>

        <RadioButton Name ="Statička" GroupName="TipOpreme" Content="Statička" Margin="186,200,375,320"></RadioButton>
        <RadioButton Name ="Dinamička" GroupName="TipOpreme" Content="Dinamička" Margin="260,200,61,320"></RadioButton>
    </Grid>
</Page>
