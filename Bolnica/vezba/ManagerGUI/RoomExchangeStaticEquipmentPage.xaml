<Page x:Class="vezba.ManagerGUI.RoomExchangeStaticEquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:vezba.ManagerGUI"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="750"
      Title="RoomExchangeStaticEquipmentPage" Background="#FFFFE1E1">
    <Grid>
        <Label Content="Broj prostorije u koju prenosimo:" Margin="44,54,520,470"/>
        <TextBox Name="BrojSobe" Text="{Binding RoomNumber, Mode=OneWay}" Margin="244,54,64,485"/>

        <Label Content="Količina prenete opreme:" Margin="64,116,533,423"/>
        <TextBox Name="Količina" Text="{Binding RoomNumber, Mode=OneWay}" Margin="244,116,64,423"/>

        <Label Content="Datum transfera:" Margin="109,160,533,376"/>
        <DatePicker Name ="Date" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="253,160,0,0" Width="137" RenderTransformOrigin="0.766,0.75"/>

        <Button Click="OkButtonClick" Margin="162,249,435,279">Potvrdi</Button>
        <Button Click="CancelButtonClick" Margin="409,249,180,279">Odustani</Button>
    </Grid>
</Page>
