<Page x:Class="vezba.ManagerGUI.RoomExchangeStaticEquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:vezba.ManagerGUI"
      mc:Ignorable="d" 
      d:DesignHeight="570" d:DesignWidth="750"
      Title="RoomExchangeStaticEquipmentPage" Background="#FFFFE1E1">
    <Grid Margin="0,0,-22,-8">
        <Label Content="Broj prostorije u koju prenosimo:" Margin="44,54,542,488"/>
        <TextBox Name="BrojSobe" Text="{Binding RoomNumber, Mode=OneWay}" Margin="244,54,64,488"/>

        <Label Content="Količina prenete opreme:" Margin="86,116,533,423"/>
        <TextBox Name="Količina" Text="{Binding RoomNumber, Mode=OneWay}" Margin="244,116,64,423"/>

        <Label Content="Datum transfera:" Margin="100,171,557,382"/>
        <DatePicker Name ="Date" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="215,172,0,0" Width="137"/>

        <Button Click="OkButtonClick" Margin="64,234,432,263">Potvrdi</Button>
        <Button Click="CancelButtonClick" Margin="415,234,74,263">Odustani</Button>
    </Grid>
</Page>
