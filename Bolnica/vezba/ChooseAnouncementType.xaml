<Window x:Class="vezba.ChooseAnouncementType"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:vezba"
        mc:Ignorable="d"
        Title="ChooseAnouncementType" Height="170" Width="210">
    <Grid>
        <Separator HorizontalAlignment="Left" Height="14" Margin="5,58,0,0" VerticalAlignment="Top" Width="180"/>
        <Button HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top" Width="180" Click="General_Button_Click" Height="50">
            <Grid>
                <Label Content="Opsta obavestenja         >" Margin="2,0,-2,-0.2" FontSize="14"/>
            </Grid>
        </Button>
        <Button HorizontalAlignment="Left" Margin="5,70,0,0" VerticalAlignment="Top" Width="180" Click="Individual_Button_Click" Height="50" RenderTransformOrigin="-0.519,0.593">
            <Grid>
                <Label Content="Individualna obavestenja >" Margin="-2,0,2,-0.2" FontSize="14"/>
            </Grid>
        </Button>

    </Grid>
</Window>
